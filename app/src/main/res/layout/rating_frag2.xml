<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#282828"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/addgenrebutton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/genrebar"
        android:background="@android:drawable/ic_menu_add" />

    <GridLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/genrebar"
        >


        <Spinner
            android:id="@+id/maingenre1"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:textColor="#d3d3d3"


            />

        <com.ratingrocker.ratingrockerapp.MultiSelectionSpinner
            android:id="@+id/genre1spinner"
            android:layout_column="1"
            android:layout_columnSpan="4"
            android:layout_row="0"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="start"
            android:textColor="#d3d3d3"
            android:clickable="true"
            android:focusable="true"
            />
        <Spinner
            android:id="@+id/maingenre2"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:textColor="#d3d3d3"


            />
        <com.ratingrocker.ratingrockerapp.MultiSelectionSpinner
            android:id="@+id/genre2spinner"
            android:layout_column="1"
            android:layout_columnSpan="4"
            android:layout_row="1"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#d3d3d3"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="wrap"
            />
        <Spinner
            android:id="@+id/maingenre3"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:textColor="#d3d3d3"


            />
        <com.ratingrocker.ratingrockerapp.MultiSelectionSpinner
            android:id="@+id/genre3spinner"
            android:layout_column="1"
            android:layout_columnSpan="4"
            android:layout_row="2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="start"
            android:textColor="#d3d3d3"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintRight_toRightOf="parent"
            />



    </GridLayout>
    <GridLayout android:id="@+id/gridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/genrebar"
        >
        <TextView
            android:id="@+id/chilViberating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnSpan="3"
            android:text="Chill Vibe"
            android:textColor="#d3d3d3"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/ratingval1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="0"
            android:focusable="false"
            android:text="0"
            android:textColor="#d3d3d3"
            android:textSize="18sp" />
        <!-- This will open up the other ratings-->


        <SeekBar
            android:id="@+id/ratingbar1"
            style="@android:style/Widget.Material.RatingBar.Indicator"
            android:layout_width="350dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_row="1"
            android:focusable="false"
            android:max="100"
            android:progress="10"
            android:thumb="@android:drawable/btn_star_big_on" />



        <TextView
            android:id="@+id/partyViberating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_columnSpan="3"
            android:text="Party Vibe Rating"
            android:textColor="#d3d3d3"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ratingval2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="2"
            android:focusable="false"
            android:text="0"
            android:textColor="#d3d3d3"
            android:textSize="18sp" />
        <!-- This will open up the other ratings-->


        <SeekBar
            android:id="@+id/ratingbar2"
            style="@android:style/Widget.Material.RatingBar.Indicator"
            android:layout_width="350dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_row="3"
            android:focusable="false"
            android:max="100"
            android:progress="10"
            android:thumb="@android:drawable/btn_star_big_on" />


        <TextView
            android:id="@+id/soloViberating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_columnSpan="3"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="Mellow Vibe Rating:"
            android:textColor="#d3d3d3"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ratingval3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="4"
            android:focusable="false"
            android:text="0"
            android:textColor="#d3d3d3"
            android:textSize="18sp" />

        <SeekBar
            android:id="@+id/ratingbar3"
            style="@android:style/Widget.Material.RatingBar.Indicator"
            android:layout_width="350dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_row="5"
            android:focusable="false"
            android:max="100"
            android:progress="10"
            android:thumb="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/freshViberating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="6"
            android:layout_columnSpan="3"
            android:text="Fresh Vibe Rating:"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="#d3d3d3"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/freshval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="6"
            android:focusable="false"
            android:text="0"
            android:textColor="#d3d3d3"
            android:textSize="18sp" />

        <!-- This will open up the other ratings-->

        <SeekBar
            android:id="@+id/freshbar"
            style="@android:style/Widget.Material.RatingBar.Indicator"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_row="7"
            android:focusable="false"
            android:max="100"
            android:progress="10"
            android:thumb="@android:drawable/btn_star_big_on" />
    </GridLayout>
    <Button
        android:id="@+id/saveratingbutton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"

        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:textColor="#000000"
        android:text="@string/save_rating" />

</RelativeLayout>