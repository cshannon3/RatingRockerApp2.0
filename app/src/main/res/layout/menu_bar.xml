<?xml version="1.0" encoding="utf-8"?>


    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#000000">

        <Button
            android:id="@+id/play_track_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@android:drawable/ic_menu_add"
            android:onClick="onNewButtonClicked"
            android:textColor="#000000"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/RatingRockerTitle"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center"
            android:text="Rating Rocker"
            android:textStyle="italic|bold"
            android:textSize="20sp"
            android:textColor="#FFFFFF"/>
        <Button
            android:id="@+id/pla"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_row="0"
            android:background="@android:drawable/ic_menu_sort_by_size"
            android:onClick="onTrackButtonClicked"
            android:textColor="#000000"
            />



        <ToggleButton
            android:id="@+id/onoffline"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="0"
            android:background="@android:drawable/presence_offline"
            android:onClick="onOfflineAddButtonClicked"
            android:textOn=""
            android:textOff=""
            />

    </GridLayout>